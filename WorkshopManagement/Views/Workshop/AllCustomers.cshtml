@model List<Customer>

<h2>List of All Customers</h2>

<form asp-action="AllCustomers" method="get">
    <div class="form-group">
        <input type="text" name="searchString" value="@ViewBag.SearchString" class="form-control" placeholder="Search by name">
        <br /><button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerID</td>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>
                    @Html.ActionLink("View Vehicles", "VehiclesForCustomer", new { customerId = customer.CustomerID }, new { @class = "btn btn-info btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
